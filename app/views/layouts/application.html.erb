<!DOCTYPE html>
<html>
  <head>
    <title>Zuidlaren</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to 'Zuidlaren', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Teams', teams_path, class: "nav-link #{'active' if controller?('teams')}" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: "nav-link #{'active' if controller?('users')}" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Events', event_groups_path, class: "nav-link #{'active' if controller?('event_groups')}" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Repositories', repositories_path, class: "nav-link #{'active' if controller?('repositories')}" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
