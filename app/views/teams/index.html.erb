<h1>Teams</h1>

<table class="table">
  <thead>
  <tr>
    <th>Naam</th>
    <th>Slack channel</th>
    <th>Aantal teamleden</th>
    <th>Aantal events</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, edit_team_path(team) %></td>
      <td><%= team.slack_channel %></td>
      <td><%= team.users.count %></td>
      <td><%= team.events.count %></td>
      <td class="text-right"><%= link_to 'X', team, method: :delete, data: { confirm: 'Weet je het zeker?' }, class: 'btn btn-light btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Nieuw Team', new_team_path, class: 'btn btn-primary' %>
</p>