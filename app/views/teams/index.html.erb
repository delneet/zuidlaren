<%= render 'main_navigation' %>

<h1>Teams</h1>

<table class="table">
  <thead>
  <tr>
    <th>Naam</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, edit_team_path(team) %></td>
      <td class="text-right"><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Weet je het zeker?' }, class: 'btn btn-default btn-xs' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Nieuw Team', new_team_path, class: 'btn btn-primary' %>
</p>