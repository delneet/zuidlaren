<h1>Users</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>GitHub</th>
    <th>Slack</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, edit_user_path(user) %></td>
      <td><%= user.github_username %></td>
      <td><%= user.slack_username %></td>
      <td class="text-right"><%= link_to 'X', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
</p>